<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="None">
    </style>

    <style name="Theme.App" parent="@android:style/Theme.Material">
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.Tag" parent="Theme.App">
        <item name="android:textColor">@color/tag_foreground</item>
        <item name="android:background">@color/tag_background</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="WhiteControls">
        <!-- Used to tint the back arrow, menu and spinner arrow -->
        <item name="colorControlNormal">@color/bright_foreground_material_dark</item>
        <item name="android:textColor">@color/bright_foreground_material_dark</item>
    </style>
</resources>
